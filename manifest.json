{
    "name": "Chrome Plugin",
    "description": "Testing Plugin",
    "version": "1.0",
    "manifest_version": 2,
    
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "/.optionspage.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "https://www.google.com/*"
    ]
}